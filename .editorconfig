root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{dart,yaml,yml,json}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{cpp,h,hpp,cc}]
indent_style = space
indent_size = 2

[CMakeLists.txt]
indent_style = space
indent_size = 2
